<?xml version="1.0" encoding="utf-8"?>
<com.loopeer.compatinset.InsetLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="@drawable/divider"
    android:background="@color/window_background_gray"
    android:showDividers="middle"
    android:orientation="vertical">

    <include layout="@layout/view_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/window_background_white">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/avatar"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginLeft="@dimen/large_padding"
            app:placeholderImage="@mipmap/ic_launcher_round"
            app:roundingBorderWidth="2dp"
            app:roundingBorderColor="@color/window_background_dark"
            app:roundAsCircle="true"/>

        <TextView
            style="@style/GymClubText.Primary"
            android:layout_marginLeft="@dimen/large_padding"
            android:textSize="26sp"
            android:id="@+id/txt_name"/>
    </LinearLayout>

    <com.loopeer.formitemview.FormTextItem
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:background="@color/window_background_white"
        android:paddingLeft="@dimen/large_padding"
        android:paddingRight="@dimen/large_padding"
        app:descText="@string/profile_dashboard"/>

    <com.loopeer.formitemview.FormTextItem
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:background="@color/window_background_white"
        android:paddingLeft="@dimen/large_padding"
        android:paddingRight="@dimen/large_padding"
        app:descText="@string/profile_courses"/>

    <com.loopeer.formitemview.FormTextItem
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:background="@color/window_background_white"
        android:paddingLeft="@dimen/large_padding"
        android:paddingRight="@dimen/large_padding"
        app:descText="@string/profile_bands"/>

    <com.loopeer.formitemview.FormTextItem
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:background="@color/window_background_white"
        android:paddingLeft="@dimen/large_padding"
        android:paddingRight="@dimen/large_padding"
        app:descText="@string/profile_divices"/>

    <com.loopeer.formitemview.FormTextItem
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:background="@color/window_background_white"
        android:paddingLeft="@dimen/large_padding"
        android:paddingRight="@dimen/large_padding"
        app:descText="@string/profile_item5"/>

    <com.loopeer.formitemview.FormTextItem
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:background="@color/window_background_white"
        android:paddingLeft="@dimen/large_padding"
        android:paddingRight="@dimen/large_padding"
        app:descText="@string/profile_item5"/>

    <com.loopeer.formitemview.FormTextItem
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:background="@color/window_background_white"
        android:paddingLeft="@dimen/large_padding"
        android:paddingRight="@dimen/large_padding"
        app:descText="@string/profile_item6"/>

    <com.loopeer.formitemview.FormTextItem
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:background="@color/window_background_white"
        android:paddingLeft="@dimen/large_padding"
        android:paddingRight="@dimen/large_padding"
        app:descText="@string/profile_item7"/>
</com.loopeer.compatinset.InsetLinearLayout>